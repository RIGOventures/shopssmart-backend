{
    "compilerOptions": {
        "moduleDetection": "force",
        "noImplicitAny": false,
        "strictNullChecks": true,
        "paths": {
			"@/*": ["./*", "./database/*"]
		}
    },
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
    "include": [
		"**/*.ts", 
		"**/*.tsx", 
		".next/types/**/*.ts"
	],
  	"exclude": ["node_modules"]
}