{
    "compilerOptions": {
        "moduleDetection": "force",
        "noImplicitAny": false,
        "strictNullChecks": true,
        "paths": {
			"@/*": ["./*"]
		}
    },
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"files": [
        "@/index.ts"
    ],
    "include": [
		"**/*.ts", 
		"**/*.tsx", 
		".next/types/**/*.ts"
	],
    "exclude": ["node_modules"]
  }